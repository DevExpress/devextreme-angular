{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "inlineSources": true,
        "removeComments": false,
        "declaration": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "lib": ["es2018", "ES2018.AsyncIterable", "dom"],
        "paths": {
          "devextreme-angular": ["packages/devextreme-angular/src"],
          "devextreme-angular/*": ["packages/devextreme-angular/src/*"]
        }
    }
}
